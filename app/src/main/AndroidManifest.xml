<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miso.misoweather">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".SocketApplication"
        android:networkSecurityConfig="@xml/network_config"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".home.HomeActivity">
        </activity>
        <activity android:name=".getnickname.SelectNickNameActivity">
        </activity>
        <activity android:name=".selectRegion.SelectRegionActivity">
        </activity>
        <activity android:name=".selectTown.SelectTownActivity">
        </activity>
        <activity android:name=".selectArea.SelectAreaActivity">
        </activity>
        <activity android:name="com.miso.misoweather.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.miso.misoweather.login.LoginActivity">
        </activity>
        <activity android:name="com.miso.misoweather.weatherdetail.WeatherDetailActivity">
        </activity>
        <activity android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Redirect URI: "kakao{NATIVE_APP_KEY}://oauth" -->
                <data
                    android:host="oauth"
                    android:scheme="@string/kakao_native_key" />
            </intent-filter>
        </activity>
    </application>
</manifest>