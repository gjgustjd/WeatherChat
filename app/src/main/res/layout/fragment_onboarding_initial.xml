<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryPurple">

    <ImageView
        android:id="@+id/img_illust"
        style="@style/imgViewAdjusted"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/onboarding_first" />

    <TextView
        android:id="@+id/txt_title_bold"
        style="@style/boldWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 날씨,\n미소웨더에 물어봐"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/img_illust"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>