<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_my_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:minWidth="60dp"
        android:minHeight="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="내 지역"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/btn_all_region"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_title"
        app:layout_constraintTop_toTopOf="@+id/btn_all_region" />

    <Button
        android:id="@+id/btn_all_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:minWidth="60dp"
        android:minHeight="0dp"
        android:text="전체"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_constraintEnd_toStartOf="@id/txt_title"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="모두의 한줄평"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_all_region"
        app:layout_constraintEnd_toStartOf="@+id/btn_my_region"
        app:layout_constraintStart_toEndOf="@+id/btn_all_region"
        app:layout_constraintTop_toTopOf="@+id/btn_all_region" />
</androidx.constraintlayout.widget.ConstraintLayout>