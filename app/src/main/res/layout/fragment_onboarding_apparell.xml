<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryPurple">

    <ImageView
        android:id="@+id/img_illust"
        style="@style/imgViewAdjusted"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/onboarding_second" />

    <TextView
        android:id="@+id/txt_title_bold"
        style="@style/boldWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/root_side_margin_big"
        android:text="오늘 뭐 입지?"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@id/txt_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/txt_subtitle"
        style="@style/boldWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="좀 꾸미고 싶은데,\n코트 입으면 추울까?"
        android:textSize="14dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/img_illust"
        app:layout_constraintStart_toStartOf="@+id/txt_title_bold"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_bold" />
</androidx.constraintlayout.widget.ConstraintLayout>