<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="오늘"
        android:textColor="@color/textBlack"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/xt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="12/31"
        android:textColor="@color/textBlack"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_day"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_beforenoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="오전"
        android:textColor="@color/textBlack"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_imoge_beforenoon"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/xt_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_afternoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="오후"
        android:textColor="@color/textBlack"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_imoge_afternoon"
        app:layout_constraintStart_toEndOf="@+id/img_imoge_beforenoon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_degree_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/textBlack"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_day" />

    <TextView
        android:id="@+id/txt_degree_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="0"
        android:textColor="@color/textBlack"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_day"
        app:layout_constraintEnd_toStartOf="@+id/txt_degree_min"
        app:layout_constraintTop_toTopOf="@+id/txt_day"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/img_imoge_beforenoon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@+id/label_beforenoon"
        app:layout_constraintEnd_toStartOf="@id/label_afternoon"
        app:layout_constraintStart_toEndOf="@+id/label_beforenoon"
        app:layout_constraintTop_toTopOf="@+id/label_beforenoon"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/icon_sun" />

    <ImageView
        android:id="@+id/img_imoge_afternoon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@+id/label_afternoon"
        app:layout_constraintEnd_toStartOf="@+id/txt_degree_max"
        app:layout_constraintStart_toEndOf="@+id/label_afternoon"
        app:layout_constraintTop_toTopOf="@+id/label_afternoon"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/icon_sun" />

</androidx.constraintlayout.widget.ConstraintLayout>